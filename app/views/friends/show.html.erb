<p style="color: green"><%= notice %></p>

<div class="container-fluid bg-dark text-light p-5">
    <div class="container bg-dark p-5">

        <h1><%= @friend.first_name%>
            <%= @friend.last_name%>
        </h1>
        <hr>
            <p><%= @friend.email%></p>
            <p><%= @friend.phone%></p>
            <p><%= @friend.twitter%></p>

            <table>
                <tr>
                    <td>
                        <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-primary" %>
                        <td><%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
                        </td>
                        <td>
                            <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger" %></td>
                    </tr>
                </table>

            </div>
        </div>
