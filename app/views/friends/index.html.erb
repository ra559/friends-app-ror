<% if user_signed_in? %>
    <h1>Friends</h1>

    <div id="friends">
        <table class="table  table-stripped table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>
                        Name
                    </th>

                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Twitter
                    </th>

                    <th colspan="3">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @friends.each do |friend| %>
                    <% if friend.user == current_user%>
                        <tr>
                            <td>
                            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
                            </td>
                            <td><%= friend.email%></td>
                            <td><%= friend.phone%></td>
                            <td><%= friend.twitter%></td>
                            <td><%= link_to 'Destroy', friend, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>


                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>

    <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center">
                <div class="text-center">
                    <h1 class="mx-auto my-0 text-uppercase">Friends List App</h1>
                    <h2 class="text-black-50 mx-auto mt-2 mb-5">A Simple Application to log a list of contacts.</h2>
                    <a class="btn btn-primary" href="https://guides.rubyonrails.org/4_0_release_notes.html">Built on Ruby On Rails 7</a>
                </div>
            </div>
        </div>
    </header>
    <%end%>
